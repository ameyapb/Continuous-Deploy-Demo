pipeline {
    agent any

    tools {
        // Define Maven installation
        maven 'Maven'
           }

        stage('Initiate') {
            steps {
                // Install Python and pip
                sh 'sudo yum update -y' 
                sh 'sudo yum install -y python3 python3-pip'
                sh 'sudo pip install --upgrade pip'
                sh 'sudo yum groupinstall -y "Development Tools"'
                sh 'sudo yum install -y gcc'

                // Install Python development headers
                sh 'sudo yum install -y python3-devel'

                // Activate the virtual environment and run Django migration commands
                sh 'python3 -m venv myenv'
                sh '''
                    source myenv/bin/activate
                    cd /var/lib/jenkins/workspace/myTest
                    pip install -r requirements.txt
                    python manage.py makemigrations
                    python manage.py migrate
                '''

                // Clone the Git repository
                git credentialsId: 'ameyapb', url: 'https://github.com/ameyapb/ContinuousDeployDemo.git', branch: 'main'

                // Run Django migration commands
                //sh 'sh -c "source myenv/bin/activate && python3 manage.py makemigrations"'
                //sh 'sh -c "source myenv/bin/activate && python3 manage.py migrate"'

                //sh 'source myenv/bin/activate && python3 manage.py makemigrations'
                //sh 'source myenv/bin/activate && python3 manage.py migrate'
                //sh 'myenv/bin/python3 manage.py makemigrations'
                //sh 'myenv/bin/python3 manage.py migrate'
                //sh 'source /var/lib/jenkins/workspace/myTest/myenv/bin/activate && /var/lib/jenkins/workspace/myTest/myenv/bin/python manage.py makemigrations'
                //sh 'source /var/lib/jenkins/workspace/myTest/myenv/bin/activate && /var/lib/jenkins/workspace/myTest/myenv/bin/python manage.py migrate'

                //sh '/var/lib/jenkins/workspace/myTest/myenv/bin/python3 /var/lib/jenkins/workspace/myTest/manage.py makemigrations'
                //sh '/var/lib/jenkins/workspace/myTest/myenv/bin/python3 /var/lib/jenkins/workspace/myTest/manage.py migrate'
            

                // Add any necessary steps for initiating the pipeline
                // For example, checkout source code from your repository
            }
        }

        
        stage('Build') {
            steps {
                // Set up Maven
                tool 'Maven'

                // Run Maven build
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                // Install dependencies for static analysis
                sh 'pip install flake8 pylint'

                // Run Flake8
                sh 'flake8 <path_to_project_directory>'

                // Run Pylint
                sh 'pylint <path_to_project_directory>'

                // Add more steps for other tests or checks
            }
        }
        
        stage('Deploy') {
            steps {
                // Clone the Ansible playbook repository
                git url: 'https://github.com/your-ansible-playbooks.git', branch: 'main'

                // Run the Ansible playbook
                sh 'ansible-playbook -i inventory playbook.yml'
            }
        }
    }
}
